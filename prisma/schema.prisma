
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id  String @id @default(cuid())
  fullname String @unique
  password String
  store String 
  photo String?  
  createdAt DateTime @default(now())
}

model Products{
  id Int @id @default(autoincrement())
  name String @unique
  userId String 
  price Int
  discountPrice Int?
  discountQuantity Int?
  createdAt DateTime @default(now())
}
model Records {
  id        String      @id @default(cuid())
  userId    String
  type      String
  date      DateTime
  product   String?
  quantity  Int?
  total     BigInt
  createdAt DateTime    @default(now())
  group     GroupRecord? @relation(fields: [groupId], references: [id] ,onDelete: Cascade)
  groupId   String?
}

model GroupRecord {
  id        String       @id @default(cuid())
  date      DateTime
  records   Records[]
  userId    String   
}